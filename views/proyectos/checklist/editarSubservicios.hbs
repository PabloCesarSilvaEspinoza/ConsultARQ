<div class="container-fluid mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
                                <a href="javascript: history.go(-1)"class="btn btn-primary"><i class="fas fa-arrow-left" aria-hidden="true"></i></a>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 col-xxl-6 text-center">
                                <p><h1>{{result.nombreSub}}<small id="nombreSubservicio" name="nombreSubservicio"></small></h1></p>
                                <label for="formGroupExampleInput" class="form-label">Tus subservicios estan compuestos de Conceptos, esta tabla muestra los conceptos que tienes agregados</label>
                            </div>
                            <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-xxl-3 text-right">
                              <!--  <button type="button" class="btn btn-danger"><i class="fas fa-times mr-2"></i>Eliminar</button>-->
                            </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive text-center">
                                <table class="table table-striped table-bordered zero-configuration">
                                    <thead>
                                        <tr>
                                            <th>Conceptos</th>
                                            <th>Unidad</th>
                                            <th>Precio p/u</th>
                                            <th>Cantidad</th>
                                            <th>Total</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>    
                                    <tbody>
                                        {{#each info}}
                                        <tr>
                                            <td>{{concepto}}</td>
                                            <td>{{unidadMedida}}</td>
                                            <td>$ {{montoXUnidad}}</td>
                                            <td>{{cantidad}}</td>
                                            <td>$ {{montoTotal}}</td>
                                            <td>
                                                <span>
                                                    <a href="/editarConcepto" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
                                                        <i class="fa fa-pencil color-muted m-r-5"></i> 
                                                    </a><a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Close">
                                                        <i class="fa fa-close color-danger"></i>
                                                    </a>
                                                </span>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Conceptos</th>
                                            <th>Unidad</th>
                                            <th>Precio p/u</th>
                                            <th>Cantidad</th>
                                            <th>Total</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="text-center">
                                <a href="/agregarConcepto/{{idSubServicio}}" class="btn btn-primary"><i class="fas fa-plus mr-2"></i>Agregar Concepto</a>
                                <a type="button" class="btn btn-outline-primary" href="/editarNombreSubservicios"><i class="fas fa-pencil-alt mr-2"></i>Cambiar Nombre</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>