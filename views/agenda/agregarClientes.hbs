<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="form-group row mt-3">
                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
                            <a href="/consultarAll" class="btn btn-primary"><i class="fas fa-arrow-left" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 col-xxl-6">
                            <center>
                                <div class="row mb-2">
                                    <div class="col">
                                        <img src="images/avatar/avatar.png" width="80" height="80" alt="">
                                    </div>
                                </div>
                            </center>
                            <div class="row mb-3 text-center">
                                <div class="col">
                                    <h3 class="mb-0">Nuevo Cliente</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
                            
                        </div>
                    </div>
                    <div class="form-validation">
                        <!-- Aqui mero está el form con "." retrocedes a la raiz/ruta anterior-->
                        <form class="form-valide" action="agregar/clienteNuevo" method="post">
                            <div class="row">
                                <div class="col-lg-4 mb-3">
                                    <label class="form-label" for="nombres">Nombre(s)</label>
                                    <input type="text" class="form-control" autocomplete="off" id="nombres" name="nombres" placeholder="Ingresa el/los nombre(s) del cliente" required pattern="([A-Za-z].?){1,45}">
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label" for="primerApelllido">Primer Apellido</label>
                                    <input type="text" autocomplete="off" class="form-control" id="primerApelllido" name="primerApelllido" placeholder="Ingresa el primer apellido del cliente" required pattern="([A-Za-z]){1,45}">
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label" for="segundoApellido">Segundo Apellido</label>
                                    <input type="text" autocomplete="off" class="form-control" id="segundoApellido" name="segundoApellido" placeholder="Ingresa el segundo apellido del cliente" required pattern="([A-Za-z]){1,45}">
                                </div>
                                <div class="col-lg-2 mb-3">
                                    <label class="form-label" for="estatus">Estatus </label>
                                    <select class="form-control" id="estatus" name="estatus" placeholder="Estatus" required>
                                        <option disabled>Seleccionar estatus</option>
                                        <option value=1>Activo</option>
                                        <option value=0>Inactivo</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 mb-3">
                                    <label class="form-label" for="telefono">Teléfono</label>
                                    <input type="tel" autocomplete="off" class="form-control" id="telefono" name="telefono" placeholder="Ingresa el teléfono" required pattner="([0-9]){3,12}">
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <label class="form-label" for="email">Correo</label>
                                    <input type="email" autocomplete="off" class="form-control" id="correo" name="correo" placeholder="Ingresa el correo electrónico" required pattner="[a-zA-Z0-9.!#$%&'*+=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*">
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <label class="form-label" for="RFC">RFC</label>
                                    <input type="text" autocomplete="off" class="form-control" id="RFC" name="RFC" placeholder="Ingresa el RFC" required>
                                </div>
                            </div>
                            <div class="form-group mt-2 row">
                                <div class="col-lg-8 ml-auto  text-right">
                                    <button  class="btn mb-1 btn-primary"><i class="fas fa-save mr-2"></i>Guardar</button>
                                    <a href="/consultarAll" class="btn mb-1 btn-outline-primary"><i class="fas fa-undo mr-2"></i>Guardar y permanecer</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>