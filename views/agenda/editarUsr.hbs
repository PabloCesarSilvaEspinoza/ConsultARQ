<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="form-group row ">
                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-xxl-3">  
                            <a href="/consultarUsuario/{{link.idUsuario}}" class="btn btn-primary"><i class="fas fa-arrow-left" aria-hidden="true"></i></a>
                            {{#if error}}
                                <div class="alert alert-danger" role="alert">
                                    <center>
                                            Las contraseñas no coinciden
                                    </center>
                                </div>     
                            {{/if}}
                            {{#if correcto}}
                                <div class="alert alert-success" role="alert">
                                    <center>
                                        Datos actualizados correctamente
                                    </center>
                                </div>     
                            {{/if}}
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 col-xxl-6">
                            
                            <center>
                                <div class="row mb-2">
                                    <div class="col">
                                        <img src="/images/avatar/avatar.png" width="80" height="80" alt="">
                                    </div>
                                </div>
                            </center>
                            <div class="row mb-3 text-center">
                                <div class="col">
                                    <h3 class="mb-0" style="text-align:center">{{link.username}}</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
                            <div class="text-right">
                                <!--ELIMINADO EL USUARIO DE LA BD --> 
                                <button type="button" class="btn btn-danger" onclick="alerta({{link.idUsuario}})"><i class="fas fa-times mr-2"></i>Eliminar</button>
                                <script> 
                                    function alerta(idUsuario){
                                        var opcion = confirm('¿Desea eliminar este Usuario?');
                                        if(opcion == true){
                                            location.href = '/eliminarUsuario/'+idUsuario;
                                        }
                                    }
                                </script>
                            </div>
                        </div>
                    </div>
                    <div class="form-validation">
                        <form class="form-valide" id="formregistro" action="/editarUsuario/{{link.idUsuario}}" method="POST" autocomplete="off">
                            {{>message}}
                            <div class="row"> 
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label" for="idEmpleado">Username (nickname)</label>
                                    <input type="text" class="form-control" id="username" name="username" placeholder="Ingresa un username" value="{{link.username}}" required>
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label" for="password1">Cambiar Contraseña</label>
                                    <input type="password" class="form-control" id="password1" name="password1" placeholder="Ingrese una nueva contraseña" >
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label" for="password2">Confirme Contraseña</label>
                                    <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirme la nueva contraseña" >
                                </div>
                                 <div class="col-lg-3 mb-3">
                                    <label class="form-label" for="password">Contraseña del Administrador</label>
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Constraseña del Administracion" required>
                                </div>
                                <!--
                                    <div class="col">
                                        <label class="form-label" for="confirmPassword">Confirmar Password</label>
                                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirme el password" required>
                                    </div>
                                -->
                            </div>
                            <div class="form-group mt-2 row">
                                <div class="col-lg-8 ml-auto  text-right">
                                    <button  class="btn mb-1 btn-primary" type="submit"><i class="fas fa-save mr-2"></i>Guardar</button>
                                    <a href="/consultarUsuario/{{link.idUsuario}}" class="btn mb-1 btn-outline-primary"><i class="fas fa-times-circle mr-2"></i>Cancelar</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>