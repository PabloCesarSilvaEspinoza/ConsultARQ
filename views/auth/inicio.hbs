<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body pb-0 d-flex justify-content-center">
                    <img src="/images/cosultarQ3.png" class="rounded mx-auto d-block" alt="...">
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <h1>Bienvenido<small id="username" name="username">Administrador</small></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="bootstrap-carousel">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                            {{#each admi}}
                            {{#if @first}}
                                <div class="carousel-item active">
                            {{else}}
                                <div class="carousel-item">
                                {{/if}}
                                    <div class="card-body">
                                        <div class="media align-items-center mb-4">
                                            <div class="media-body">
                                                <h3 class="mb-0" id="nombreEncargado" name="nombreEncargado">{{nombre}}</h3>
                                            </div>
                                        </div>
                                        <h4 ide="nombreProyecto" name="nombreProyecto">{{proyecto}}</h4>
                                        <p class="text-muted" id="descripciónProyecto" name="descripcionProyecto">{{fechaFin}}</p>
                                        <ul class="card-profile__info">
                                            <li class="mb-1"><strong class="text-dark mr-4">Ubicación</strong> <span id="direccion" name="direccion">{{calle}} {{colonia}}</span></li>
                                        </ul>
                                        <div class="row mb-5">
                                            <div class="col-12 text-center">
                                                <a href="/menuOpciones/{{idProyecto}}"class="btn btn-danger px-5">Consultar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="bootstrap-carousel">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                            {{#each ingreso}}
                            {{#if @first}}
                                <div class="carousel-item active">
                            {{else}}
                                <div class="carousel-item">
                                {{/if}}
                                        <!--aqui mero va lo que me pediste-->
                                    <h4 class="card-title">Ingreso</h4>
                                    <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 390px;"><div id="activity" style="overflow: hidden; width: auto; height: 390px;">
                                            <div class="media border-bottom-1 pt-3 pb-3">
                                                <div class="media-body">
                                                    <h5>{{nombre}}</h5>
                                                    <p class="mb-0">{{monto}}</p>
                                                </div><span class="text-muted ">{{hora}}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="bootstrap-carousel">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                            {{#each gasto}}
                            {{#if @first}}
                                <div class="carousel-item active">
                            {{else}}
                                <div class="carousel-item">
                                {{/if}}
                                        <!--aqui mero va lo que me pediste-->
                                        <h4 class="card-title">Gastos</h4>
                                        <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 390px;"><div id="activity" style="overflow: hidden; width: auto; height: 390px;">
                                            <div class="media border-bottom-1 pt-3 pb-3">
                                                <div class="media-body">
                                                    <h5>{{conceptoGasto}}</h5>
                                                    <p class="mb-0">{{monto}}</p>
                                                </div><span class="text-muted ">{{hora}}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    