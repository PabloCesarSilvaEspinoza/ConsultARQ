<div class="container-fluid mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
                                <a href="javascript: history.go(-1)"class="btn btn-primary"><i class="fas fa-arrow-left" aria-hidden="true"></i></a>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 col-xxl-6 text-center">
                                <p><h1>{{result.nombreSub}}<small id="nombreSubservicio" name="nombreSubservicio"></small></h1></p>
                                <label for="formGroupExampleInput" class="form-label">Tus subservicios estan compuestos de Conceptos, esta tabla muestra los conceptos que tienes agregados</label>
                            </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive text-center">
                                <table class="table table-striped table-bordered zero-configuration">
                                    <thead>
                                        <tr>
                                            <th>Conceptos</th>
                                            <th>Unidad</th>
                                            <th>Cantidad</th>
                                        </tr>
                                    </thead>    
                                    <tbody>
                                        {{#each info}}
                                        <tr>
                                            <td>{{concepto}}</td>
                                            <td>{{unidadMedida}}</td>
                                            <td>{{cantidad}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Conceptos</th>
                                            <th>Unidad</th>
                                            <th>Cantidad</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>