<div class="container-fluid mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-xxl-3">
                                <a href="javascript: history.go(-1)" class="btn btn-primary"><i class="fas fa-arrow-left" aria-hidden="true"></i></a>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 col-xxl-6 text-center">
                                <h1>{{area}} <small id="nombreServicio" name="nombreServicio"></small></h1>
                                <label for="formGroupExampleInput" class="form-label">Aqui se muestra una lista con todos los subservicios que conforman tu servicio actual.</label>
                            </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mt-3">
                            <div class="table-responsive text-center">
                                <table class="table table-striped table-bordered zero-configuration">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>    
                                    <tbody>
                                        {{#each result}}
                                        <tr>
                                            <td>{{nombreSub}}</td>
                                            <td>
                                                <span>
                                                    <a href="/Usr/consultarSubservicios/{{idSubServicio}}" data-toggle="tooltip" data-placement="top" title="" data-original-title="Ver">
                                                        <i class="fa fa-eye color-muted m-r-5"></i> 
                                                    </a><a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Close">
                                                        <i class="fa fa-close color-danger"></i>
                                                    </a>
                                                </span>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>