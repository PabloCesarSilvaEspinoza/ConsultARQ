<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center mb-5">Nuevo servicio</h1>
                    <div class="form-validation">
                        <form class="form-valide" action="agregar/nuevoServicio" method="post">
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="nombreServicio">Nombre servicio <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese el nombre del servicio que desea agregar">
                                </div>
                            </div>
                             <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-skill">Checklist <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control" id="idChecklist" name="idChecklist">
                                        <option disabled> -- Seleccione -- </option>
                                        {{#each checklist}}
                                            <option value={{idChecklist}}selected>{{nombre}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-8 ml-auto  text-right">
                                        <button class="btn btn-primary">Guardar</button>
                                        <button type="reset" class="btn btn-outline-primary">Cancelar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>