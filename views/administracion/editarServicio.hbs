<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center mb-5">Editar servicio</h1> 
                    <div class="form-validation">
                        <form class="form-valide" action="/editarServicio/{{info.idServicio}}" method="post" autocomplete="off">
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="nombreServicio">Nombre de servicio <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="nombre" name="nombre" value="{{info.nombre}}" placeholder="Ingrese el nuevo nombre del servicio seleccionado">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-8 ml-auto  text-right">
                                        <button type="submit" class="btn btn-primary">Guardar</button>
                                        <a href="./tablaServicios" class="btn btn-outline-primary">Cancelar</a>  
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>